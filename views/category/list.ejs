<%- include('../layouts/header.ejs') %>
    <div class="container p-4">
        <a href="/categories-create" class="btn btn-outline-primary rounded-0">Create</a>
        <table class="table">
            <thead>
                <tr>
                    <th>NO.</th>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% category.forEach((items, index)=> { %>
                    <tr>
                        <td scope="row"><%= index + 1 %></td>
                        <td><%= items.id %></td>
                        <td><%= items.name %></td>
                        <td><%= items.status == 1 ? "Show" : "Hide" %></td>
                        <td>
                            <a href="/categories/<%= items.id %>/edit" class="btn btn-outline-success rounded-0">Update</a>
                            <a href="/categories/<%= items.id %>/delete" class="btn btn-outline-danger rounded-0">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
<%- include('../layouts/footer.ejs') %>